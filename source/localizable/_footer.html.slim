.footer
  .links
    .social
      = link_to 'https://www.twitter.com/griddiary', class: 'twitter' do
        = image_tag 'footer/twitter.svg', alt: t('seo.twitter')
      = link_to 'https://www.facebook.com/griddiary', class: 'facebook' do
        = image_tag 'footer/facebook.svg', alt: t('seo.facebook')
      = link_to 'http://weibo.com/griddiary', class: 'weibo' do
        = image_tag 'footer/weibo.svg', alt: t('seo.weibo')
      = link_to 'http://weixin.qq.com/r/5UPG3kLEHx9grQa99xb3', class: 'wechat' do
        .tooltip
          = image_tag 'wechat.jpg', alt: t('seo.wechat_qrcode')
        = image_tag 'footer/wechat.svg', alt: t('seo.wechat')
      = link_to 'mailto:support@griddiaryapp.com', class: 'email' do
        = image_tag 'footer/email.svg', alt: t('seo.email')

    .others
      = link_to t('footer.links.press_kit'),
        'http://griddiary.qiniudn.com/presskit.zip'
      = link_to t('footer.links.support_center'),
        'https://griddiary.uservoice.com'
      = link_to t('footer.links.help_us_translate'),
        'http://translate.griddiaryapp.com/project/griddiary/invite'
      = link_to t('footer.links.privacy_policy'),
        '/support/privacy.html'
      = link_to t('footer.links.terms_of_service'),
        '/support/terms.html'

  .language-switcher
    = link_to 'English', '/en'
    = link_to '中文', '/zh'

  .copyright
    = partial("copy")

javascript:
  (function() {
    if (location.href.indexOf('zh') < 0) {
      document.querySelector('.copyright span').style.display = 'none';
    }
  })();
